[flake8]
max-line-length = 88
extend-ignore = E203, W503
# Allow long lines in docstrings and comments (E501)
per-file-ignores =
    __init__.py:E501
    */models/*.py:E501
    */config/*.py:E501
    */repositories/*.py:E501
    */monitoring/*.py:E501
    */security/*.py:E501
    tests/**/*.py:E501
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .hatch,
    venv,
    .venv
